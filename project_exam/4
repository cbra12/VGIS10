\begin{frame}{Deep Learning}{CNN Architecture}
    \begin{block}{}
        Layers
        \begin{itemize}
            \item Convolutional
            \item Activation
                \begin{itemize}
                    \item ReLU, Sigmoid
                \end{itemize}
            \item Final
                \begin{itemize}
                    \item Classification: Fully-connected output scores
                    \item Regression: Single output neuron
                \end{itemize}
        \end{itemize}
        \begin{figure}
            \includegraphics[width=0.5\linewidth]{../../Figs/Introduction/cnn.tex}
            \caption*{CNN architecture}
        \end{figure}
\end{block}
\end{frame}

